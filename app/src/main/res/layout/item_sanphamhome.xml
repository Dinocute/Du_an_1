<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    android:id="@+id/sanphamhome"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:src="@drawable/giay"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/txt_ten_san_pham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên sản phẩm"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txtgia_san_pham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giá sản phẩm"
        android:textColor="@color/orange"
        android:textSize="20sp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/txt_so_luong_san_pham"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Số lượng san pham "
        android:layout_marginLeft="5dp"
        android:textColor="@color/orange"
        android:textSize="20sp" />

        <Button
            android:id="@+id/btn_themvaogiohang"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Thêm vào giỏ hàng"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_margin="10dp" />

</LinearLayout>